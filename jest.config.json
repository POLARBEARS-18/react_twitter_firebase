{
  "roots": ["<rootDir>/"],
  "testMatch": ["**/__tests__/**/*.+(ts|tsx|js)", "**/?(*.)+(spec|test).+(ts|tsx|js)"],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "testEnvironment": "jsdom",
  "moduleNameMapper": {
    "^./src/(.*)$": "<rootDir>/src/$1"
  },
  "moduleDirectories": ["node_modules", "src"],
  "setupFilesAfterEnv": ["./jest.setup.ts"]
}
